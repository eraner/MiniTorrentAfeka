<Window x:Name="TorrentWindow1" x:Class="MiniTorrent_GUI.TorrentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiniTorrent_GUI"
        mc:Ignorable="d"
        Title="TorrentWindow" Height="300" Width="547.598" Closing="Window_Closing" MinWidth="1000" MinHeight="500" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <CollectionViewSource x:Key="AvailableFileSource" CollectionViewType="ListCollectionView"/>
        <CollectionViewSource x:Key="DownloadingFileSource" CollectionViewType="ListCollectionView"/>
        <SolidColorBrush x:Key="PrimaryBrush1" Color="#FF4169AA" />
        <SolidColorBrush x:Key="PrimaryFont1" Color="White" />
    </Window.Resources>
    <Window.BorderBrush>
        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
    </Window.BorderBrush>

    <Grid>
        <DataGrid x:Name="AvailableFileDataGrid" AutoGenerateColumns="True" Margin="10,10,10,0" HorizontalAlignment="Stretch"  VerticalAlignment="Top" HorizontalContentAlignment="Stretch" 
                  ColumnWidth="*" DataContext="{StaticResource AvailableFileSource}" ItemsSource="{Binding}" FontSize="16" SelectionMode="Single" VerticalScrollBarVisibility="Visible" IsReadOnly="True" >
            <DataGrid.RowBackground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionColorKey}}"/>
            </DataGrid.RowBackground>
            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush1}"/>
                    <Setter Property="Foreground" Value="{StaticResource PrimaryFont1}" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>

        <Border Margin="5" Padding="5" Background="GhostWhite" 
          BorderBrush="SteelBlue" BorderThickness="1" CornerRadius="3" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <StackPanel x:Name="ButtonsStackPanel" >
                <Button x:Name="UpdateFilesButton" Margin="5" Click="UpdateFilesButton_Click" FontSize="16" Content="Update Files"/>
                <Button x:Name="RequestAFileButton" Margin="5" Content="Request a file" Click="RequestAFileButton_Click" FontSize="16"/>
            </StackPanel>
        </Border>
        <Label x:Name="RequestFileLabel" Content="Label" HorizontalAlignment="Left" Margin="18,435,0,0" VerticalAlignment="Bottom"/>

        <Border Margin="20" Padding="3" Background="GhostWhite" 
          BorderBrush="SteelBlue" BorderThickness="1" CornerRadius="3" VerticalAlignment="Bottom" HorizontalAlignment="Left">
            <DataGrid x:Name="DownloadingFilesDatagrid" AutoGenerateColumns="True" Margin="10,10,10,0" HorizontalAlignment="Stretch" 
                      VerticalAlignment="Top" HorizontalContentAlignment="Stretch" FontSize="16" SelectionMode="Single" IsReadOnly="True" ItemsSource="{Binding}">
                
            </DataGrid>
        </Border>
        
    </Grid>

    



</Window>